<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5D7E6A"
    android:orientation="vertical"
    tools:context=".RegistroEmpleado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5D7E6A"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Register Employee"
            android:textColor="#191919"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#5D7E6A"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <EditText
            android:id="@+id/Ingreso_Nombre"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#323232"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:labelFor="@+id/Titulo_Nombre"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#191919"
            android:textColorHint="#323232"
            android:textSize="20sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/Ingreso_Apellido"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#323232"
            android:ems="10"
            android:hint="Last name"
            android:inputType="text"
            android:labelFor="@+id/Titulo_Categoria"
            android:textAlignment="center"
            android:textColor="#191919"
            android:textColorHint="#323232"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/Ingreso_DNI"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#323232"
            android:ems="10"
            android:hint="DNI"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#191919"
            android:textColorHint="#323232"
            android:textSize="20sp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/Ingreso_Puesto"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#323232"
            android:ems="10"
            android:hint="Position"
            android:textAlignment="center"
            android:textColor="#191919"
            android:textColorHint="#323232"
            android:textSize="20sp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Signo_Dolar"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="$"
                android:textColor="#191919"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/Ingreso_Salario"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="#323232"
                android:ems="10"
                android:hint="Salary"
                android:inputType="none"
                android:textAlignment="center"
                android:textColor="#191919"
                android:textColorHint="#323232"
                android:textSize="20sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <Button
            android:id="@+id/Boton_Guardar"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="#284027"
            android:onClick="BotonAgregarRegistro"
            android:text="Save register"
            android:textColor="#E6E6E6"
            android:textSize="18sp"
            app:rippleColor="#6A5252" />
    </LinearLayout>
</LinearLayout>